<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="futmatcher.kildare.com.futmatcher.ui.MatchDetailsFragment"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ToolbarFutTheme"
        android:contentDescription="@string/ct_desc_toolbar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail_location"
        android:fitsSystemWindows="false"
        >
        <TextView
            android:id="@+id/tv_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/text_detail_match_title"
            android:contentDescription="@string/ct_desc_toolbar"
            style="@style/TitleFutTheme"
            />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/tv_title_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_location"
        android:textStyle="bold"
        android:contentDescription="@string/ct_desc_location"
        style="@style/FutTextStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_location"
        app:layout_constraintRight_toLeftOf="@+id/tv_detail_location"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_location"
        />

    <TextView
        android:id="@+id/tv_detail_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/FutTextStyle"
        android:contentDescription="@string/ct_desc_location"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail_date"
        app:layout_constraintLeft_toRightOf="@+id/tv_title_location"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_details"
        tools:text="@string/dummy_text" />

    <TextView
        android:id="@+id/tv_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/details_date"
        android:textStyle="bold"
        android:contentDescription="@string/ct_desc_date"
        style="@style/FutTextStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_detail_date"
        app:layout_constraintRight_toLeftOf="@+id/tv_detail_date"
        app:layout_constraintBottom_toBottomOf="@+id/tv_detail_date"
        />

    <TextView
        android:id="@+id/tv_detail_date"
        style="@style/FutTextStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/ct_desc_date"
        app:layout_constraintBottom_toTopOf="@+id/tv_detail_players"
        app:layout_constraintLeft_toRightOf="@+id/tv_title_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_location"
        tools:text="@string/dummy_text" />

    <TextView
        android:id="@+id/tv_detail_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/dummy_text"
        android:textStyle="bold"
        android:contentDescription="@string/ct_desc_players"
        style="@style/FutTextStyle"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/lv_players"
        />

    <ListView
        android:id="@+id/lv_players"
        android:layout_width="match_parent"
        android:layout_height="@dimen/detail_list_view_height"
        android:layout_weight="1"
        android:contentDescription="@string/ct_desc_players"
        app:layout_constraintTop_toBottomOf="@+id/tv_detail_players"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
    />

    <Button
        android:id="@+id/bt_add_player"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/button_add_player"
        android:paddingStart="@dimen/button_padding"
        android:paddingEnd="@dimen/button_padding"
        android:contentDescription="@string/ct_desc_add_players"
        style="@style/FutButtonStyle"
        app:layout_constraintTop_toBottomOf="@+id/lv_players"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_pick"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:id="@+id/bt_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingStart="@dimen/button_padding"
        android:paddingEnd="@dimen/button_padding"
        android:contentDescription="@string/ct_desc_pick_team"
        style="@style/FutButtonStyle"
        android:text="@string/button_pick_team"
        app:layout_constraintTop_toBottomOf="@+id/lv_players"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bt_add_player"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</android.support.constraint.ConstraintLayout>
