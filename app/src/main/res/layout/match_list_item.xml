<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/marginSize"
    android:layout_marginBottom="@dimen/marginSize"
    android:layout_marginLeft="@dimen/marginSize"
    android:layout_marginRight="@dimen/marginSize"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rv_title"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/marginSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_list_match_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorTextPrimary"
        android:textSize="@dimen/rv_title_size"
        android:layout_marginLeft="@dimen/marginSize"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/dummy_text" />

    <TextView
        android:id="@+id/tv_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rv_location"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/marginSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_list_match_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title"
        />

    <TextView
        android:id="@+id/tv_list_match_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/rv_location_size"
        android:layout_marginLeft="@dimen/marginSize"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_location"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_title"
        tools:text="@string/dummy_text"

        />

    <TextView
        android:id="@+id/tv_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rv_date"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/marginSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_location"

        />

    <TextView
        android:id="@+id/tv_list_match_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextSecondary"
        android:textSize="@dimen/rv_date_size"
        android:layout_marginLeft="@dimen/marginSize"
        app:layout_constraintLeft_toRightOf="@+id/tv_item_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_location"
        tools:text="@string/dummy_text" />

</android.support.constraint.ConstraintLayout>